{
  "meta": {
    "title": "Восстановление пароля",
    "description": "Восстановление пароля"
  },
  "forgot_password_2": {
    "breadcrumbs": {
      "items": [{
        "text": {
          "text": "Главная"
        }
      }, {
        "text": {
          "text": "Восстановление пароля"
        }
      }]
    },
    "title": {
      "text": "Восстановление пароля"
    },
    "form_block": {
      "title": {
        "level": 2,
        "text": "Восстановить пароль"
      },
      "inputs": [{
        "element": {
          "type": "text",
          "text": "Логин",
          "name": "name",
          "attrs": "required data-pristine-required-message='Поле логин является обязательным'"
        }
      }, {
        "element": {
          "class": "input-block__input-password",
          "type": "password",
          "text": "Введите пароль",
          "name": "password",
          "attrs": "required data-pristine-required-message='Поле пароль является обязательным'"
        }
      }, {
        "element": {
          "class": "input-block__input-password",
          "type": "password",
          "text": "Новый пароль",
          "name": "password",
          "attrs": "required data-pristine-required-message='Поле новый пароль является обязательным'"
        },
        "button": {
          "class": "input-block__btn-eye",
          "icons": [{
            "class": "input-block__icon-eye input-block__icon-eye--no-slash",
            "name": "sprite-multi.svg#eye"
          }, {
            "class": "input-block__icon-eye input-block__icon-eye--slash",
            "name": "sprite-multi.svg#eye_slash"
          }],
          "attrs": "type='button' aria-label='Переключить видимость пароля'"
        }
      }, {
        "element": {
          "class": "input-block__input-password",
          "type": "password",
          "text": "Подтвердите новый пароль",
          "name": "confirm_password",
          "attrs": "required data-pristine-required-message='Поле подтвердите новый пароль является обязательным'"
        },
        "button": {
          "class": "input-block__btn-eye",
          "icons": [{
            "class": "input-block__icon-eye input-block__icon-eye--no-slash",
            "name": "sprite-multi.svg#eye"
          }, {
            "class": "input-block__icon-eye input-block__icon-eye--slash",
            "name": "sprite-multi.svg#eye_slash"
          }],
          "attrs": "type='button' aria-label='Переключить видимость пароля'"
        }
      }],
      "button": {
        "text": {
          "text": "Изменить пароль"
        },
        "attrs": "type='submit'"
      },
      "button_auth": {
        "href": "#",
        "text": {
          "text": "Войти на сайт"
        }
      }
    }
  }
}