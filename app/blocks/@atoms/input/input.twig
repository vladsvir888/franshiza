{% set input_type = input.element.type|default('text') %}

{% if input.textarea %}
  <textarea
    {% if input.textarea.id %}id="{{ input.textarea.id }}"{% endif %}
    class="textarea {{ input.textarea.class }}"
    name="{{ input.textarea.name }}"
    {% if input.textarea.text %}placeholder="{{ input.textarea.text }}"{% endif %}
    {{ input.textarea.attrs }}
  ></textarea>
{% elseif input.picture %}
  {% view "@image" with {
    image: input.picture
  } %}
{% else %}
  <div class="input-block {{ input.wrap.class }}">
    {% if input.label %}
      <label {% if input.element.id %}for="{{ input.element.id }}"{% endif %}>
        {{ input.element.text }}
      </label>
    {% endif %}

    <input
      {% if input.element.id %}id="{{ input.element.id }}"{% endif %}
      class="input-block__input {{ input.element.class }}"
      type="{{ input_type }}"
      name="{{ input.element.name }}"
      {% if input.element.text %}placeholder="{{ input.element.text }}"{% endif %}
    >

    {% if input.search_btn %}
      {% view "@button" with {
        button: input.search_btn
      } %}
    {% endif %}

    {% if input.search_btn_with_text %}
      {% view "@button" with {
        button: input.search_btn_with_text
      } %}
    {% endif %}
  </div>
{% endif %}
