<{{ button.href ? "a" : "button" }}
  {% if button.href %}href="{{ button.href }}"{% endif %}
  class="btn {{ button.class }}"
  {% if button.id %}id="{{ button.id }}"{% endif %}
  {% if button.attrs %}{{ button.attrs }}{% endif %}
>
  {% if button.icon %}
    {% view "@icon" with {
      icon: button.icon|default({})|merge({
        class: "btn__icon" ~ (button.icon.class is defined ? " " ~ button.icon.class : "")
      })
    } %}
  {% endif %}
  {% if button.text %}
    <span class="btn__text {{ button.text.class }}">
      {{ button.text.text }}
    </span>
  {% endif %}
</{{ button.href ? "a" : "button" }}>
