<section class="subscribe {{ subscribe.class }}">
  {% view "@title" with {
    title: subscribe.title|merge({
      class: "subscribe__title"
    })
  } %}

  <div class="subscribe__socials">
    {% for item in subscribe.list.items %}
      {% view "@button" with {
        button: item.link|merge({
          class: "subscribe__link" ~ (item.link.class is defined ? " " ~ item.link.class : "")
        })
      } %}
    {% endfor %}
  </div>

  <form action="/" method="get" class="form form--validation subscribe__form">
    {% view "@input" with {
      input: subscribe.form.input
    } %}

    {% view "@button" with {
      button: subscribe.form.btn|merge({
        class: "btn--btn btn--primary subscribe__btn"
      })
    } %}
  </form>

  <p class="subscribe__text">
    {{ subscribe.text }}
  </p>
</section>