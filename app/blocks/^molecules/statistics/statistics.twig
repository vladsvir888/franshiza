<div class="statistics">
  {% for item in statistics.items %}
    <div class="statistics__item">
      <div class="statistics__info">
        {% view "@icon" with {
          icon: item.info.icon
        } %}

        <div class="statistics__info-text">
          {{ item.info.text }}
        </div>
      </div>

      {% view "@button" with {
        button: {
          class: "btn--arrow statistics__btn",
          text: {
            text: "Показать"
          },
          right_icon: {
            name: "sprite-mono.svg#arrow_right"
          },
          attrs: 'data-fancybox data-src="#modal_login"'
        }
      } %}
    </div>
  {% endfor %}
</div>