{% extends "../blocks/layout/base.twig" %}

{% block content %}
<main id="main" class="main" tabindex="-1">
  <div class="container">
    <div class="main__inner">
      <div class="main__content">
        {% view "^breadcrumbs" with {
          breadcrumbs: contacts.breadcrumbs
        } %}

        {% view "@title" with {
          title: contacts.title|merge({
            class: "title--h1"
          })
        } %}

        {% view "^contacts_block" with {
          contacts_block: contacts.contacts_block
        } %}

        {% view "&form_block" with {
          form_block: contacts.form_block
        } %}

        {% view "&section" with {
          section: contacts.review_franchise_and_exclusive_interviews
        } %}

        {% view "@banner" %}

        {% view "&accordion" with {
          accordion: contacts.sidebar_accordion_mobile
        } %}

        {% view "&sidebar_slider" with {
          sidebar_slider: contacts.sidebar_slider_mobile
        } %}

        {% view "&section" with {
          section: contacts.news_and_info_about_franchise
        } %}
      </div>
      <div class="main__sidebar">
        {% view "&accordion" with {
          accordion: contacts.sidebar_accordion
        } %}

        {% view "&sidebar_slider" with {
          sidebar_slider: contacts.sidebar_slider
        } %}
      </div>
    </div>
  </div>
</main>

{% view "@top_btn" %}

{% endblock %}