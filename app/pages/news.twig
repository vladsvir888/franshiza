{% extends "../blocks/layout/base.twig" %}

{% block content %}
<main id="main" class="main" tabindex="-1">
  {% view "@sticky_banner" with {
    sticky_banner: {
      class: "sticky-banner--left"
    }
  } %}

  {% view "@sticky_banner" with {
    sticky_banner: {
      class: "sticky-banner--right"
    }
  } %}

  <div class="container main__container">
    <div class="main__inner">
      <div class="main__content">
        {% view "^breadcrumbs" with {
          breadcrumbs: news.breadcrumbs
        } %}

        {% view "@title" with {
          title: news.title|merge({
            class: "title--h1"
          })
        } %}

        <p class="main__text">
          {{ news.text }}
        </p>

        {% view "&section" with {
          section: news.review_partners
        } %}

        {% view "@banner" %}

        {% view "&news_and_info_about_franchise" %}

        {% view "&sidebar_accordion_mobile" %}

        {% view "&sidebar_slider_mobile" %}
      </div>
      <aside class="main__sidebar">
        {% view "&sidebar_accordion" %}

        {% view "&sidebar_slider" %}
      </aside>
    </div>
  </div>
</main>

{% view "@top_btn" %}

{% endblock %}