{% extends "../blocks/layout/base.twig" %}

{% block content %}
<main id="main" class="main main--reviews" tabindex="-1">
  {% view "@sticky_banner" with {
    sticky_banner: {
      class: "sticky-banner--left"
    }
  } %}

  {% view "@sticky_banner" with {
    sticky_banner: {
      class: "sticky-banner--right"
    }
  } %}

  <div class="container main__container">
    <div class="main__inner">
      <div class="main__content">
        {% view "^breadcrumbs" with {
          breadcrumbs: reviews.breadcrumbs
        } %}

        {% view "@title" with {
          title: reviews.title|merge({
            class: "title--h1"
          })
        } %}

        <p class="main__text">
          {{ reviews.text }}
        </p>

        {% view "^review_list" with {
          review_list: reviews.review_list_mobile
        } %}

        {% view "&section" with {
          section: reviews.review_current_partners
        } %}

        {% view "&section" with {
          section: reviews.review_current_partners_2
        } %}

        {% view "&section" with {
          section: reviews.review_current_partners_3
        } %}

        {% view "@banner" %}

        {% view "&sidebar_accordion_mobile" %}

        {% view "&sidebar_slider_mobile" %}
      </div>
      <aside class="main__sidebar">
        {% view "^review_list" with {
          review_list: reviews.review_list
        } %}

        {% view "&sidebar_accordion" %}

        {% view "&sidebar_slider" %}
      </aside>
    </div>
  </div>
</main>

{% view "@top_btn" %}

{% endblock %}