{% extends "../blocks/layout/base.twig" %}

{% block content %}
<main id="main" class="main" tabindex="-1">
  <div class="container">
    <div class="main__inner">
      <div class="main__content">
        {% view "^breadcrumbs" with {
          breadcrumbs: auth.breadcrumbs
        } %}

        {% view "@title" with {
          title: auth.title|merge({
            class: "title--h1"
          })
        } %}

        {% view "&form_block" with {
          form_block: auth.form_block
        } %}

        {% view "&section" with {
          section: auth.review_franchise_and_exclusive_interviews
        } %}

        {% view "@banner" %}

        {% view "&accordion" with {
          accordion: auth.sidebar_accordion_mobile
        } %}

        {% view "&sidebar_slider" with {
          sidebar_slider: auth.sidebar_slider_mobile
        } %}

        {% view "&section" with {
          section: auth.news_and_info_about_franchise
        } %}
      </div>
      <aside class="main__sidebar">
        {% view "&accordion" with {
          accordion: auth.sidebar_accordion
        } %}

        {% view "&sidebar_slider" with {
          sidebar_slider: auth.sidebar_slider
        } %}
      </aside>
    </div>
  </div>
</main>

{% view "@top_btn" %}

{% endblock %}